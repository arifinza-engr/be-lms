# 🔧 Core Configuration
NODE_ENV=test
PORT=3001
HOST=0.0.0.0

# 🗄️ Database Configuration
# Use separate test database
DATABASE_URL="postgresql://postgres:password@localhost:5432/lms_test"

# 🔐 JWT Configuration
JWT_SECRET="test-jwt-secret-for-testing-only"
JWT_REFRESH_SECRET="test-refresh-secret-for-testing-only"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# 🤖 AI Configuration (Mock values for testing)
OPENAI_API_KEY="test-openai-key"
ELEVENLABS_API_KEY="test-elevenlabs-key"
ELEVENLABS_VOICE_ID="test-voice-id"

# 🌐 CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:8080"

# ⚡ Rate Limiting (More lenient for testing)
RATE_LIMIT_TTL=60000
RATE_LIMIT_LIMIT=1000

# 📝 Logging (Minimal for tests)
LOG_LEVEL="error"

# 🔄 Redis Configuration (Different DB for testing)
REDIS_URL="redis://localhost:6379"

# 📁 File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DEST="./test-uploads"